# Forge 1 Backend Environment Configuration

# Environment
ENV=local

# JWT Configuration
JWT_SECRET=local-dev-secret
JWT_REFRESH_SECRET=change-me-too-for-refresh
ACCESS_TOKEN_TTL_MINUTES=60
REFRESH_TOKEN_TTL_DAYS=30

# Database Configuration
DATABASE_URL=postgresql://forge:forge@127.0.0.1:5542/forge1_local

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6382/0
LOGIN_RATE_LIMIT_PER_MINUTE=5

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Provider API Keys (optional - set these to enable specific AI models)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Logging
LOG_LEVEL=INFO

# Email configuration (Resend)
RESEND_API_KEY=
FRONTEND_BASE_URL=http://localhost:5173
