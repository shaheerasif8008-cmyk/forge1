# Forge 1 Backend Environment Configuration

# Environment
ENV=dev

# JWT Configuration
JWT_SECRET=change-me-in-production-use-a-secure-random-string
JWT_REFRESH_SECRET=change-me-too-for-refresh
ACCESS_TOKEN_TTL_MINUTES=60
REFRESH_TOKEN_TTL_DAYS=30

# Database Configuration
DATABASE_URL=postgresql://forge:forge@localhost:5432/forge

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
LOGIN_RATE_LIMIT_PER_MINUTE=5

# CORS Configuration
BACKEND_CORS_ORIGINS=*

# AI Provider API Keys (optional - set these to enable specific AI models)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Logging
LOG_LEVEL=INFO

# Email configuration (Resend)
RESEND_API_KEY=
FRONTEND_BASE_URL=http://localhost:5173
